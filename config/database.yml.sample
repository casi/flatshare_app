default: &default
  adapter: sqlite3
  encoding: unicode
  pool: 5
  timeout: 5000

development:
  <<: *default
  database: <%= ENV['DB_PATH'] %>/flatshare_app_development.db

test:
  <<: *default
  database: <%= ENV['DB_PATH'] %>/flatshare_app_test.db

staging:
  <<: *default
  database: <%= ENV['DB_PATH'] %>/flatshare_app_staging.db

production:
  <<: *default
  secret_key_base: <%=ENV["SECRET_KEY_BASE"]%>
  database: <%= ENV['DB_PATH'] %>/flatshare_app_production.db

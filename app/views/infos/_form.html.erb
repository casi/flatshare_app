<%= form_for @info do |f| %>
<%= render 'shared/error_messages', object: @info %>

<div class="form-group">
	<%= f.label :user %>
	<%= collection_select(:info, :user_id, User.all, :id, :name, html: {class: 'form-control'}) %>
</div>

<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control',
	placeholder: 'concise title which describes content the best' %>
</div>

<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, size: '10x10', class: 'form-control',
	placeholder: 'something new or flatshare related stuff...' %>
</div>

<div class="actions">
	<%= f.submit yield(:button_text), class: 'btn btn-primary' %>
</div>
<% end %>

<% provide(:title, "#{ t 'info.show.title' }") %>
<% provide(:button_text, "#{ t 'comment.form.button-text' }") %>
<div class="row">
  <h2><%= @info.title %>
  	<%= link_to edit_info_path(@info) do %>
  		<span class="glyphicon glyphicon-pencil"></span>
  	<% end %>
  </h2>
  <div class="col-md-8 col-md-offset-2 info">
	<p><%= @info.user ? @info.user.name : "#{ t 'user.deleted' }" %></p>
	<small><%= l @info.created_at, format: :short %> |
	<%= l @info.updated_at, format: :short %></small><br>
	<p><%= simple_format(@info.content) %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2 info">
	<%= render @info.comments %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2 comment">
	<%= render 'comments/form' %>
  </div>
</div>

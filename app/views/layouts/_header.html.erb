	<header class="navbar navbar-fixed-top navbar-inverse">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<% if logged_in? %>
				  <%= link_to "Flatshare App", infos_path, id: "logo" %>
				<% else %>
				  <%= link_to "Flatshare App", login_path, id: "logo" %>
				<% end %>
			</div>
			<% if logged_in? %>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<%= t 'mainmenu.infos' %> <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "#{ t 'mainmenu.news-and-infos' }", infos_path, title: "#{ t 'mainmenu.news-and-infos' }" %></li>
							<li><%= link_to "#{ t 'mainmenu.q-and-a' }", qandas_path, title: "#{ t 'mainmenu.q-and-a' }" %></li>
							<li><%= link_to "#{ t 'mainmenu.house-rules' }", rules_path, title: "#{ t 'mainmenu.house-rules' }" %></li>
						</ul>
					</li>

					<li><%= link_to "#{ t 'mainmenu.list.name' }", listitems_path, title: "#{ t 'mainmenu.list.title' }" %></li>
					<li><%= link_to "#{ t 'mainmenu.housework.name' }", housework_path, title: "#{ t 'mainmenu.housework.title' }" %></li>
					<li><%= link_to "#{ t 'mainmenu.flatmates.name' }", users_path, title: "#{ t 'mainmenu.flatmates.title' }" %></li>

					<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            	<%= current_user.name %> <b class="caret"></b>
    			  </a>
			      <ul class="dropdown-menu">
            	<li><%= link_to "#{ t 'mainmenu.edit-profile' }", edit_user_path(current_user) %></li>
            	<li class="divider"></li>
            	<% if current_user.admin? %>
            		<li><a href="/admin">Admin</a></li>
            		<li class="divider"></li>
            	<% end %>
              <li>
              	<%= link_to "#{ t 'mainmenu.log-out' }", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>

				</ul>
			</div>
			<% end %>

		</div>
	</header>

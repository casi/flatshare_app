<%= form_for(@user, html: {multipart: true}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row">
    <div class="col-md-6 col-sm-6 form-group">
      <%= f.label "#{ t 'users.form.name.label' }" %>
      <%= f.text_field :name, class: 'form-control', placeholder: "#{ t 'users.form.name.placeholder' }" %>
      <div class="form-group">
        <%= f.label "#{ t 'users.form.email.label' }" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "#{ t 'users.form.phone.label' }" %>
        <%= f.telephone_field :phone, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6 col-sm-6">
      <%= f.label "#{ t 'users.form.picture.label' }" %>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      <%= render 'layouts/if_picture' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 form-group">
      <%= f.label "#{ t 'users.form.birthday.label' }" %>
      <%= f.text_field :birthday, class: 'form-control',
                       placeholder: "#{ t 'users.form.birthday.placeholder' }" %>
    </div>
    <div class="col-md-4 col-sm-4 form-group">
      <%= f.label "#{ t 'users.form.moved-in.label' }" %>
      <%= f.text_field :moved_in, class: 'form-control' %>
    </div>
    <div class="col-md-4 col-sm-4 form-group">
      <%= f.label "#{ t 'users.form.moved-out.label' }" %>
      <%= f.text_field :moved_out, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-sm-9 form-group">
      <%= f.label "#{ t 'users.form.description.label' }" %>
      <%= f.text_area :description, class: 'form-control', size: '10x6',
                      placeholder: "#{ t 'users.form.description.placeholder' }" %>
    </div>
    <div class="col-md-2 col-sm-3 form-group">
      <%= f.label "#{ t 'users.form.locale.label' }" %>
      <%= f.select :locale, options_for_select(I18n.available_locales, I18n.locale), {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-sm-6 form-group">
      <%= f.label "#{ t 'users.form.password.label' }" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="col-md-6 col-sm-6 form-group">
      <%= f.label "#{ t 'users.form.password-confirmation.label' }" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="btn-group">
    <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
  </div>
<% end %>

<script type="text/javascript">
    $('#user_picture').bind('change', function () {
        var size_in_megabytes = this.files[0].size / 1024 / 1024;
        if (size_in_megabytes > 5) {
            alert("#{ t 'users.form.image-alert' }");
        }
    });
</script>
